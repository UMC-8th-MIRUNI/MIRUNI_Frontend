<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/schedule_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="날짜"
        android:fontFamily="@font/inter_semibold"
        android:textSize="16sp"
        android:textColor="#242424"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/schedule_line"/>
    <TextView
        android:id="@+id/schedule_todo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="할 일"
        android:fontFamily="@font/inter_regular"
        android:textSize="14sp"
        android:textColor="#707070"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/schedule_date"
        app:layout_constraintTop_toTopOf="@id/schedule_date"
        app:layout_constraintBottom_toBottomOf="@id/schedule_date"/>
    <TextView
        android:id="@+id/schedule_required"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="소요시간"
        android:fontFamily="@font/inter_semibold"
        android:textSize="16sp"
        android:textColor="#E25C5C"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/schedule_date"
        app:layout_constraintBottom_toBottomOf="@id/schedule_date"/>

    <View
        android:id="@+id/schedule_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/schedule_date"/>
</androidx.constraintlayout.widget.ConstraintLayout>