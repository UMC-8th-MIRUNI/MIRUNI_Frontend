<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/task_on_date_miruni_start_line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.08"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/task_on_date_miruni_end_line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.24"/>

    <ImageView
        android:id="@+id/task_on_date_back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/task_on_date_back"
        android:layout_marginStart="26sp"
        android:layout_marginTop="8sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/task_on_date_miruni_iv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/miruni_face"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toBottomOf="@id/task_on_date_back_iv"
        app:layout_constraintStart_toStartOf="@id/task_on_date_miruni_start_line"
        app:layout_constraintEnd_toEndOf="@id/task_on_date_miruni_end_line"/>

    <!--    Font: DM Sans Bold -->
    <TextView
        android:id="@+id/task_on_date_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2022년 9월 8일 (목)"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@id/task_on_date_miruni_iv"
        app:layout_constraintStart_toStartOf="@id/task_on_date_miruni_iv"/>

    <ImageView
        android:id="@+id/task_on_date_calendar_iv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/task_on_date_calendar"
        app:layout_constraintDimensionRatio="1:1"
        android:padding="3dp"
        app:layout_constraintTop_toTopOf="@id/task_on_date_count_tv"
        app:layout_constraintBottom_toBottomOf="@id/task_on_date_count_tv"
        app:layout_constraintStart_toStartOf="@id/task_on_date_date_tv"/>

    <TextView
        android:id="@+id/task_on_date_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="일정 갯수: 3개"
        android:fontFamily="@font/poppins_medium"
        android:textSize="12sp"
        android:layout_marginTop="20sp"
        android:layout_marginStart="5sp"
        app:layout_constraintTop_toBottomOf="@id/task_on_date_date_tv"
        app:layout_constraintStart_toEndOf="@id/task_on_date_calendar_iv"/>

    <ImageView
        android:id="@+id/task_on_date_plus_iv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/task_on_date_plus"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginEnd="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/task_on_date_count_tv"
        app:layout_constraintBottom_toBottomOf="@id/task_on_date_count_tv"/>

    <View
        android:id="@+id/task_on_date_border_line"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#E0E0E0"
        android:layout_marginHorizontal="16sp"
        android:layout_marginTop="20sp"
        app:layout_constraintTop_toBottomOf="@id/task_on_date_count_tv"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/task_on_date_task_rv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="4sp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@id/task_on_date_border_line"
        app:layout_constraintEnd_toEndOf="@id/task_on_date_border_line"
        app:layout_constraintTop_toBottomOf="@id/task_on_date_border_line"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_task"/>
</androidx.constraintlayout.widget.ConstraintLayout>