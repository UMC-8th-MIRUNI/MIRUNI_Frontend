<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LoadingFragment">

    <TextView
        android:id="@+id/loading_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/MainTitle"
        android:layout_marginTop="67dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/loading_miruni_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mirunif"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@id/loading_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/loading_guide1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading_guide1"
        android:fontFamily="@font/raleway_bold"
        android:textSize="20sp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@id/loading_miruni_iv"
        app:layout_constraintStart_toStartOf="@id/loading_miruni_iv"
        app:layout_constraintEnd_toEndOf="@id/loading_miruni_iv"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading_guide2"
        android:fontFamily="@font/raleway_regular"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/loading_guide1_tv"
        app:layout_constraintStart_toStartOf="@id/loading_guide1_tv"
        app:layout_constraintEnd_toEndOf="@id/loading_guide1_tv"/>
</androidx.constraintlayout.widget.ConstraintLayout>