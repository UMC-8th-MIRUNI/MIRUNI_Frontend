<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".WritingReviewFragment">

    <ImageView
        android:id="@+id/writing_back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_arrow"
        android:layout_marginTop="23dp"
        android:layout_marginStart="23dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/writing_back_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back_eng"
        style="@style/Manrope400"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/writing_back_iv"
        app:layout_constraintTop_toTopOf="@id/writing_back_iv"
        app:layout_constraintBottom_toBottomOf="@id/writing_back_iv"/>

    <EditText
        android:id="@+id/writing_title_tv"
        android:layout_width="359dp"
        android:layout_height="44dp"
        android:background="@drawable/round_square"
        android:backgroundTint="#E4FFE3"
        android:hint="@string/writing_title_guide"
        android:textColorHint="#2E442D"
        style="@style/Manrope400"
        android:maxLines="1"
        android:gravity="center_vertical"
        android:paddingHorizontal="18dp"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@id/writing_back_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/writing_date_tv"
        android:layout_width="359dp"
        android:layout_height="44dp"
        android:background="@drawable/round_square"
        android:backgroundTint="#E4FFE3"
        android:hint="@string/writing_date_guide"
        android:textColorHint="#161616"
        style="@style/Manrope400"
        android:maxLines="1"
        android:gravity="center_vertical"
        android:paddingHorizontal="18dp"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@id/writing_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/writing_content_layout"
        android:layout_width="359dp"
        android:layout_height="0dp"
        android:background="@drawable/round_square"
        android:backgroundTint="#E4FFE3"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@id/writing_date_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/writing_complete_btn">

        <EditText
            android:id="@+id/writing_content_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/writing_content_guide"
            android:textColorHint="#161616"
            style="@style/Manrope400"
            android:maxLines="1"
            android:gravity="top"
            android:paddingVertical="20dp"
            android:paddingHorizontal="18dp"
            android:background="@null"/>

        <ImageView
            android:id="@+id/writing_tree_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/writing_tree"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/writing_complete_btn"
        android:layout_width="383dp"
        android:layout_height="54dp"
        android:text="@string/complete"
        android:background="@drawable/black_round8_square"
        android:textColor="@color/white"
        style="@style/Manrope700"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/writing_content_layout"/>

</androidx.constraintlayout.widget.ConstraintLayout>