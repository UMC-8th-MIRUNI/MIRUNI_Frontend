<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/nav_top_line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.93"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/nav_home_bottom_line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.98"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/main_top_bar_line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.078"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_top_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/main_top_bar_line">

        <ImageView
            android:id="@+id/main_top_bar_alarm_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/main_bell"
            android:layout_marginStart="15sp"
            app:layout_constraintTop_toTopOf="@id/main_title_tv"
            app:layout_constraintBottom_toBottomOf="@id/main_title_tv"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/main_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MIRUNI"
            android:fontFamily="@font/climatecrisis_regular"
            android:textSize="22sp"
            android:letterSpacing="0.03"
            android:textColor="#2E442D"
            android:shadowDy="3.66"
            android:shadowColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/main_peanut_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="6sp"
            android:paddingVertical="2sp"
            android:background="@drawable/bg_d9d9d9_square_40"
            android:layout_marginEnd="15sp"
            app:layout_constraintTop_toTopOf="@id/main_title_tv"
            app:layout_constraintBottom_toBottomOf="@id/main_title_tv"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/main_peanut_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/peanut"/>
            <TextView
                android:id="@+id/main_peanut_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="37"
                android:textSize="11.5sp"
                android:textColor="#29AD25"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/main_frm"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/main_top_bar"
        app:layout_constraintBottom_toBottomOf="@id/nav_top_line"/>

    <ImageView
        android:id="@+id/nav_home_iv"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:src="@drawable/ic_home"
        android:padding="12sp"
        android:background="@drawable/bg_1ae019_circle"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@id/nav_home_bottom_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/nav_tool_iv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_tool"
            android:layout_marginHorizontal="20sp"
            android:layout_marginVertical="6sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/nav_calendar_iv"
            app:layout_constraintTop_toTopOf="@id/main_nav"
            app:layout_constraintBottom_toTopOf="@id/nav_tool_tv"/>
        <TextView
            android:id="@+id/nav_tool_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="도구"
            android:textSize="10.5sp"
            android:layout_marginBottom="6sp"
            app:layout_constraintTop_toBottomOf="@id/nav_tool_iv"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/nav_tool_iv"
            app:layout_constraintEnd_toEndOf="@id/nav_tool_iv"/>

        <ImageView
            android:id="@+id/nav_calendar_iv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_calendar"
            android:layout_marginHorizontal="20sp"
            android:layout_marginVertical="6sp"
            app:layout_constraintStart_toEndOf="@id/nav_tool_iv"
            app:layout_constraintEnd_toStartOf="@id/nav_dummy_home_iv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/nav_calendar_tv"/>
        <TextView
            android:id="@+id/nav_calendar_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="캘린더"
            android:textSize="10.5sp"
            android:layout_marginBottom="6sp"
            app:layout_constraintTop_toBottomOf="@id/nav_calendar_iv"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/nav_calendar_iv"
            app:layout_constraintEnd_toEndOf="@id/nav_calendar_iv"/>

        <ImageView
            android:id="@+id/nav_dummy_home_iv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="20sp"
            android:layout_marginVertical="6sp"
            app:layout_constraintStart_toEndOf="@id/nav_calendar_iv"
            app:layout_constraintEnd_toStartOf="@id/nav_locker_iv"
            app:layout_constraintBottom_toBottomOf="@id/nav_calendar_iv"/>
        <TextView
            android:id="@+id/nav_home_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="홈"
            android:textSize="10.5sp"
            android:layout_marginTop="3sp"
            app:layout_constraintTop_toTopOf="@id/nav_calendar_tv"
            app:layout_constraintStart_toStartOf="@id/nav_dummy_home_iv"
            app:layout_constraintEnd_toEndOf="@id/nav_dummy_home_iv"/>

        <ImageView
            android:id="@+id/nav_locker_iv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_locker"
            android:layout_marginHorizontal="20sp"
            android:layout_marginVertical="6sp"
            app:layout_constraintStart_toEndOf="@id/nav_dummy_home_iv"
            app:layout_constraintEnd_toStartOf="@id/nav_mypage_iv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/nav_locker_tv"/>
        <TextView
            android:id="@+id/nav_locker_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="보관함"
            android:textSize="10.5sp"
            android:layout_marginBottom="6sp"
            app:layout_constraintTop_toBottomOf="@id/nav_locker_iv"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/nav_locker_iv"
            app:layout_constraintEnd_toEndOf="@id/nav_locker_iv"/>

        <ImageView
            android:id="@+id/nav_mypage_iv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_mypage"
            android:layout_marginHorizontal="20sp"
            android:layout_marginVertical="6sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/nav_locker_iv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/nav_mypage_tv"/>
        <TextView
            android:id="@+id/nav_mypage_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="마이페이지"
            android:textSize="10.5sp"
            android:layout_marginBottom="6sp"
            app:layout_constraintTop_toBottomOf="@id/nav_mypage_iv"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/nav_mypage_iv"
            app:layout_constraintEnd_toEndOf="@id/nav_mypage_iv"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>